$('a[href*="#"]:not([href="#"]):not(a[href="#carousel"]):not(a[href*="#st-login"]):not(a[href*="#cp-login"]):not(a[href*="#st-signup"]):not(a[href*="#cp-signup"]):not(a[href*="#student_form"]):not(a[href*="#company_form"])').click(function() {
    if (location.pathname.replace(/^\//,'') == this.pathname.replace(/^\//,'') 
        || location.hostname == this.hostname) {

        var target = $(this.hash);
        target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
           if (target.length) {
             $('html,body').animate({
                 scrollTop: target.offset().top
            }, 600);
            return false;
        }
    }
});
